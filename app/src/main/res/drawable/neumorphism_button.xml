<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp">
    <!-- Light -->
    <item
        android:left="5dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <gradient
                android:startColor="#E1E1E1"
                android:centerColor="#A3A3A3"
                android:endColor="#80FFFFFF"
                android:angle="270" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <!-- Shadow -->
    <item
        android:left="6dp"
        android:top="8dp"
        android:right="5dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <gradient
                android:startColor="#4E4E4E"
                android:centerColor="#A3A3A3"
                android:endColor="#80FFFFFF"
                android:angle="90" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>


    <!-- Main Button -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4c5055"
                android:endColor="#4c5055"
                android:angle="135" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
