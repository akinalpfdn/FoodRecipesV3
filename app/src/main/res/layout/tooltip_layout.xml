<!-- tooltip_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/tooltip_background">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/lvl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100p -> Garson"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/lvl5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500p -> Master Şef"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/lvl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200p -> Aşçı Çırağı"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/lvl6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600p -> 1 Yıldız Şef"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/lvl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300p -> Aşçı"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/lvl7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700p -> 2 Yıldız Şef"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/lvl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400p -> Şef"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/lvl8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800p -> 3 Yıldız Şef"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>
    </GridLayout>

    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tarif Paylaşarak ve tariflerinize \nbeğeni ile favori alarak puan kazanabilirsiniz."
        android:textColor="@color/black"
        android:minLines="3"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Her Tarif       10p\n\Her Beğeni   1p\nHer Favori     3p "
        android:textColor="@color/black"
        android:minLines="2"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_gravity="center"/>
</LinearLayout>
