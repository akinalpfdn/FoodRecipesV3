<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Başlık Girişi -->
        <EditText
            android:id="@+id/recipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recipe Title"
            android:textColor="@color/text_color_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Hashtag Girişi -->
        <EditText
            android:id="@+id/recipeHashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter hashtags"
            android:textColor="@color/text_color_secondary"
            android:layout_marginBottom="16dp" />

        <!-- Malzemeler Bölümü -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="18sp"
                android:textColor="@color/text_color_primary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add an ingredient"
                android:textColor="@color/text_color_secondary"
                android:layout_marginBottom="8dp" />

            <!-- Daha fazla malzeme ekleme butonu -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addIngredientButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/neumorphism_button"
                android:stateListAnimator="@null"
                android:elevation="4dp"
                android:shadowRadius="10"
                android:text="ADD INGREDIENT"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="16dp"/>


        </LinearLayout>

        <!-- Detaylı Tarif Girişi -->
        <EditText
            android:id="@+id/recipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter detailed instructions"
            android:textColor="@color/text_color_secondary"
            android:layout_marginBottom="16dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="5" />

        <!-- Resim Ekleme Bölümü -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Images (up to 3)"
                android:textSize="18sp"
                android:textColor="@color/text_color_primary"
                android:layout_marginBottom="8dp" />

            <!-- Resim ekleme butonu -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/neumorphism_button"
                android:elevation="8dp"
                android:text="Add Image"
                android:layout_marginBottom="8dp" />

            <!-- Seçilen resimlerin gösterildiği alan -->
            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
